{
    "extends": "ts-node/node16/tsconfig.json",
    "ts-node": { "files": true, "transpileOnly": true },
    "include": ["hardhat.config.ts", "types/**/*", "src/**/*", "hardhat-configs/**/*", "tasks/**/*"],
    "exclude": ["packages", "temp", "node_modules"],
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES2018",
        "lib": ["ES2018", "DOM", "DOM.Iterable", "ES2019.Array", "ES2019.Object", "es5"],
        "module": "commonjs",
        "allowJs": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "strict": false,
        "esModuleInterop": true,
        "baseUrl": "./",
        "types": ["node"],
        "typeRoots": ["./types"],
        "paths": {
            "@configs": ["hardhat-configs"],
            "@utils": ["src/utils"],
            "@utils/*": ["src/utils/*"],
            "@tasks": ["src/tasks"],
            "@scripts/*": ["src/scripts/*"],
            "@test-utils": ["src/utils/test"]
        }
    }
}
