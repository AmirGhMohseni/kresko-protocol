{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2018",
        "lib": ["ES2018", "DOM", "DOM.Iterable", "ES2019.Array", "ES2019.Object"],
        "module": "commonjs",
        "allowJs": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "strict": false,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@configs": ["hardhat-configs"],
            "@utils": ["src/utils"],
            "@utils/*": ["src/utils/*"],
            "@tasks": ["src/tasks"],
            "@scripts/*": ["src/scripts/*"]
        }
    },
    "include": ["hardhat.config.ts", "hardhat-configs/**/*", "src/**/*", "tasks/**/*", "types/**/*"],
    "exclude": ["node_modules", "packages", "temp"]
}
