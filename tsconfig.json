{
    "extends": "ts-node/node16/tsconfig.json",
    "ts-node": { "files": true, "transpileOnly": true },
    "exclude": ["packages", "temp", "node_modules"],
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES2018",
        "lib": ["ES2018", "DOM", "DOM.Iterable", "ES2019.Array", "ES2019.Object", "es2019"],
        "module": "CommonJS",
        "allowJs": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "strict": false,
        "esModuleInterop": true,
        "baseUrl": "./",
        "typeRoots": ["types"],
        "paths": {
            "@configs": ["hardhat-configs"],
            "@deploy-config/*": ["src/deploy-config/*"],
            "@utils": ["src/utils"],
            "@utils/*": ["src/utils/*"],
            "@tasks": ["src/tasks"],
            "@test/*": ["src/test/*"],
            "@scripts/*": ["src/scripts/*"],
            "@test-utils": ["src/utils/test"]
        }
    }
}
