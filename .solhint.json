{
    "extends": "solhint:recommended",
    "plugins": ["prettier"],
    "rules": {
        "code-complexity": ["error", 7],
        "compiler-version": ["error", ">=0.8.14"],
        "constructor-syntax": "error",
        "max-line-length": ["error", 120],
        "prettier/prettier": ["error"],
        "reason-string": ["warn", { "maxLength": 64 }]
    }
}
